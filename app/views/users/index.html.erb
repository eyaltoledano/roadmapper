<div class="container-fluid">
	<div class="page-header text-center">
	  <h1 class="inline"><small>Listing <%= User.count %> Users</small></h1> 
	<div class="row">
		<div class="col-md-6 col-md-offset-3">  
			<div class="well">
				<table class="table table-hover">
				  <thead>
				    <tr>
					  <th>ID</th>				      
					  <th>Name</th>
				      <th>Email</th>
				      <th>Provider</th>
				      <th>UID</th>
				      <th colspan="3"></th>
				    </tr>
				  </thead>

				  <tbody>
				    <% @users.each do |user| %>
				      <tr>
						<td><%= link_to user.id, user %></td>
				        <td><%= link_to user.name, user %></td>
				        <td><%= user.email %></td>
				        <td><%= user.provider %></td>
				        <td><%= user.uid %></td>
				        <td></td>
				        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %>
							<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default", id: "danger-btn" %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>

				<br>
		
			  </div>
				<%= link_to 'New User', new_user_path, class: "btn btn-green" %>
			</div>
		</div>
	</div>
</div>





