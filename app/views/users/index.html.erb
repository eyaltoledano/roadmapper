<div class="container-fluid">
	<div class="page-header text-center">
	  <h1 class="inline"><small>Listing Users</small></h1> 
	  <div>
		<table class="table table-hover">
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Email</th>
		      <th>Provider</th>
		      <th>Uid</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @users.each do |user| %>
		      <tr>
		        <td><%= user.name %></td>
		        <td><%= user.email %></td>
		        <td><%= user.provider %></td>
		        <td><%= user.uid %></td>
		        <td><%= link_to 'Show', user, class: "btn btn-default" %></td>
		        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %></td>
		        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default", id: "danger-btn" %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<br>

		<%= link_to 'New User', new_user_path, class: "btn btn-success" %>		
	  </div>
	</div>
</div>





