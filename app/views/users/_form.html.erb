<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :provider %>
    <%= f.input :uid %>
  </div>
<br>
  <div class="form-actions text-center">
    <%= f.button :submit, class: "btn btn-blue" %>
  </div>
<% end %>
