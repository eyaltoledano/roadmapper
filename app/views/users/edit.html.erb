<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <div class="panel-title">
		      <h1>Editing <strong><%= @user.name %></strong> <small>(<%= @user.email %>)</small></h1>
			  <span id="user-id"><strong>#<%= @user.id %></strong></span>
		    </div>
		  </div>
		  <div class="panel-body">
			<%= render 'form' %>
		  </div>
		  <div class="panel-footer">
			<%= link_to 'Show', @user, class: "btn btn-default pull-right" %>
			<%= link_to 'Back', users_path, class: "btn btn-default" %>
		  </div>
		</div>		
	</div>
</end>