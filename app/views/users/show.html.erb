<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <div class="panel-title page-header">
		      <h1><strong><%= @user.name %></strong> <small>(<%= @user.email %>)</small></h1>
			  <small id="user-id"><strong>#<%= @user.id %></strong></small>
		    </div>
		  </div>
		  <div class="panel-body">
			<p id="notice"><%= notice %></p>
			<table class="table">
				<tbody>
					<tr>
						<td><strong>Name</strong></td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td><strong>Email</strong></td>
						<td><%= @user.email %></td>
					</tr>
					<tr>
						<td><strong>Provider</strong></td>
						<td><%= @user.provider %></td>
					</tr>
					<tr>
						<td><strong>UID</strong></td>
						<td><%= @user.uid %></td>
					</tr>
				</tbody>
			</table>

		  </div>
		  <div class="panel-footer">
			<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-blue pull-right" %>
			<%= link_to 'Back', users_path, class: "btn btn-default" %>
		  </div>
		</div>		
	</div>
</end>
